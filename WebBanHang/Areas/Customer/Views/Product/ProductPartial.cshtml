@model List<Product>
<h3 class="text-uppercase"> Product List Of @ViewBag.CATEGORY_NAME</h3>
<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <h3 class="card-header">@p.Name</h3>
                    <div class="card-body">
                        <h5 class="card-title">Giá: @string.Format("${0:#,##0}", p.Price)</h5>
                        <h6 class="card-subtitle text-muted">Danh mục: @p.Category?.Name</h6>
                    </div>
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="/@p.ImageUrl" class="img-fluid" />
                    }
                    else
                    {
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <rect width="100%" height="100%" fill="#868e96"></rect>
                            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image</text>
                        </svg>
                    }
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-success">Detail</a>
                        <a class="addtocart card-link btn btn-outline-info" data-productId="@p.Id" asp-action="AddToCart" asp-controller="Cart"
                           asp-route-productId="@p.Id"> Add to cart </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">Không có sản phẩm nào trong danh mục</div>
    }
</div>
